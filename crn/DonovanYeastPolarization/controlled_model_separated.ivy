object protocol = {

	type 2bit

	interpret 2bit -> bv[1]

	individual idle : 2bit

	individual r : inc_dec.num
	individual l : inc_dec.num
	individual rl : inc_dec.num
	individual g : inc_dec.num
	individual ga : inc_dec.num
	individual gbg : inc_dec.num
	individual gd : inc_dec.num

	after init {
		r := 50;
		l := 2;
		rl := 0;
		g := 50;
		ga := 0;
		gbg := 0;
		gd := 0;

		idle := 0 
	}

	action update_r1 = {
		if selector.r1_execution {
			call reactions.r1(r);
			r := inc_dec.incr(r)
		}
	}

	action update_r2 = {
		if selector.r2_execution {
			call reactions.r2(r);
			r := inc_dec.decr(r)
		}
	}

	action update_r3 = {
		if selector.r3_execution {
			call reactions.r3(r,l,rl);
			r := inc_dec.decr(r);
			l := inc_dec.decr(l);
			rl := inc_dec.incr(rl);
			l := inc_dec.incr(l)
		}
	}

	action update_r4 = {
		if selector.r4_execution {
			call reactions.r4(rl,r);
			rl := inc_dec.decr(rl);
			r := inc_dec.incr(r)
		}
	}

	action update_r5 = {
		if selector.r5_execution {
			call reactions.r5(rl,g,ga,gbg);
			rl := inc_dec.decr(rl);
			g := inc_dec.decr(g);
			ga := inc_dec.incr(ga);
			gbg := inc_dec.incr(gbg);
			if gbg >= 50 {
				call goal.achieved(gbg)
			}
		}
	}

	action update_r6 = {
		if selector.r6_execution {
			call reactions.r6(ga,gd);
			ga := inc_dec.decr(ga);
			gd := inc_dec.incr(gd)
		}
	}

	action update_r7 = {
		if selector.r7_execution {
			call reactions.r7(gbg,gd,g);
			gbg := inc_dec.decr(gbg);
			gd := inc_dec.decr(gd);
			g := inc_dec.incr(g)
		}
	}

	action update_r8 = {
		if selector.r8_execution {
			call reactions.r8(rl);
			rl := inc_dec.incr(rl)
		}
	}

	action idling = {}

	before update_r1 {
		assert idle = 0;
		assert enabled.r1(r);
	}

	before update_r2 {
		assert idle = 0;
		assert enabled.r2(r);
	}

	before update_r3 {
		assert idle = 0;
		assert enabled.r3(r,l);
	}

	before update_r4 {
		assert idle = 0;
		assert enabled.r4(rl);
	}

	before update_r5 {
		assert idle = 0;
		assert enabled.r5(rl,g);
	}

	before update_r6 {
		assert idle = 0;
		assert enabled.r6(ga);
	}

	before update_r7 {
		assert idle = 0;
		assert enabled.r7(gbg,gd);
	}

	before update_r8 {
		assert idle = 0;
		assert enabled.r8(rl);
	}

	before idling {
		assert idle = 1 
	}
	
}

