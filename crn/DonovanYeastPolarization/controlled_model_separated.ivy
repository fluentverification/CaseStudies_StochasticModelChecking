#lang ivy 1.7

object inc_dec = {
	type num
	
	interpret num -> bv[10]

	type exec_var

	interpret exec_var -> bv[8]

	type exec_stage
	
	interpret exec_stage -> bv[3]	

	action incr(x:num) returns(y:num) = {
		y := x + 1
	}

	action decr(x:num) returns(y:num) = {
		y := x - 1
	}
}


object goal = {

	action achieved(v:inc_dec.num)

	object spec = {
		before achieved {
			assert v >= 50;
			protocol.idle := 1
		}
	}
}

object enabled = {

	action r1(r_1:inc_dec.num) returns(y:bool) = {
		#y := false
		y := true
	}

	action r2(r_1:inc_dec.num) returns(y:bool) = {
		if r_1 >= 1 {
			#y := false
			y := true
		}
		else {
			y := false
		}
	}
	
	action r3(r_1:inc_dec.num,l_1:inc_dec.num) returns(y:bool) = {
		if r_1 >= 1 & l_1 >= 1 {
			#y := false
			y := true
		}
		else {
			y := false
		}
	}

	action r4(rl_1:inc_dec.num) returns(y:bool) = {
		if rl_1 >= 1 {
			#y := false
			y := true
		}
		else {
			y := false
		}
	}

	action r5(rl_1:inc_dec.num,g_1:inc_dec.num) returns(y:bool) = {
		if rl_1 >= 1 & g_1 >= 1 {
			y := true
		}
		else {
			y := false
		}
	}

	action r6(ga_1:inc_dec.num) returns(y:bool) = {
		if ga_1 >= 1 {
